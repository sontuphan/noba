{
  "name": "isotest",
  "version": "1.0.0",
  "description": "The test framework for Bare",
  "main": "dist/index.js",
  "bin": {
    "isotest": "bin/node.js",
    "isotest-node": "bin/node.js",
    "isotest-bare": "bin/bare.js"
  },
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "imports": {
    "process": {
      "bare": "bare-process",
      "default": "process"
    },
    "child_process": {
      "bare": "bare-subprocess",
      "default": "child_process"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --clean --format cjs,esm --dts --sourcemap",
    "pretest": "npm run build && tsup tests/**/*.ts --clean --silent --external isotest --format cjs --out-dir tmp",
    "test": "ISOTEST_MAIN_ID=0 bare ./tmp/ok.test.js"
  },
  "keywords": [
    "test",
    "node",
    "bare"
  ],
  "author": "Tu Phan <tu.phan@tether.io>",
  "license": "MIT",
  "dependencies": {
    "bare-process": "^4.2.1",
    "bare-subprocess": "^5.1.2",
    "paparam": "^1.8.6"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "bare": "^1.22.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
