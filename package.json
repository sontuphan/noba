{
  "name": "noba",
  "version": "1.4.0-next.1",
  "description": "The isometric test framework for javascript/typescript",
  "main": "dist/index.cjs",
  "type": "module",
  "bin": {
    "noba": "bin/node.js",
    "noba-node": "bin/node.js",
    "noba-bare": "bin/bare.js"
  },
  "module": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "spy": [
        "dist/spy.d.ts"
      ],
      "mock": [
        "dist/mock.d.ts"
      ]
    }
  },
  "files": [
    "dist/**",
    "bin/**",
    "cli.js"
  ],
  "imports": {
    "process": {
      "bare": "bare-process",
      "default": "process"
    },
    "child_process": {
      "bare": "bare-subprocess",
      "default": "child_process"
    },
    "fs": {
      "bare": "bare-fs",
      "default": "fs"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./spy": {
      "types": "./dist/spy.d.ts",
      "import": "./dist/spy.js",
      "require": "./dist/spy.cjs"
    },
    "./mock": {
      "types": "./dist/mock.d.ts",
      "import": "./dist/mock.js"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsup",
    "pretest": "tsup-node tests --clean --silent --format esm --out-dir tmp",
    "test": "NOBA_MAIN_ID=0 bare ./tmp/**/*.test.js",
    "ci:release": "semantic-release"
  },
  "keywords": [
    "test",
    "node",
    "bare"
  ],
  "author": "Tu Phan <tu.phan@tether.io>",
  "license": "MIT",
  "repository": "git@github.com:sontuphan/noba.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "bare": "^1.22.0",
    "bare-cov": "^1.1.2",
    "bare-fs": "^4.4.4",
    "bare-module": "^5.0.3",
    "bare-process": "^4.2.1",
    "bare-subprocess": "^5.1.2",
    "bare-url": "^2.2.2",
    "c8": "^10.1.3",
    "escodegen": "^2.1.0",
    "esmock": "^2.7.3",
    "import-meta-resolve": "^4.2.0",
    "paparam": "^1.8.6",
    "tinyspy": "^4.0.4"
  },
  "devDependencies": {
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@types/asciichart": "^1.5.8",
    "@types/escodegen": "^0.0.10",
    "@types/node": "^24.5.0",
    "asciichart": "^1.5.25",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.8",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
